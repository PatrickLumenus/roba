{
  "name": "@perivel/roba",
  "version": "1.1.0",
  "type": "module",
  "types": "./dist/types/src/index.d.ts",
  "private": false,
  "description": "Flexible role-based access control library",
  "repository": "https://github.com/Perivel/roba.git",
  "author": "PatrickLumenus <pluy@perivel.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@chaperone/util": "^0.2.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "cypress": "^12.7.0",
    "rollup": "^3.18.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "test:open": "yarn cypress open",
    "release:patch": "yarn publish --patch",
    "release:minor": "yarn publish --minor",
    "release:major": "yarn publish --major"
  },
  "exports": {
    ".": {
      "browser": {
        "import": "./dist/esm.mjs",
        "require": "./dist/c.cjs"
      },
      "node": {
        "import": "./dist/esm.mjs",
        "require": "./dist/c.cjs"
      },
      "import": "./dist/esm.mjs",
      "require": "./dist/c.cjs",
      "types": "./dist/types/src/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "restricted"
  }
}
